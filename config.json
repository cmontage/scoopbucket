{
  "name": "scoopbucket-official",
  "description": "Scoop official repositories mirror - Daily auto sync all official buckets",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://github.com/cmontage/scoopbucket-official",
  "buckets": {
    "main": {
      "source": "https://github.com/ScoopInstaller/Main",
      "description": "Main applications"
    },
    "extras": {
      "source": "https://github.com/ScoopInstaller/Extras", 
      "description": "Extra applications"
    },
    "versions": {
      "source": "https://github.com/ScoopInstaller/Versions",
      "description": "Versioned applications"
    },
    "nirsoft": {
      "source": "https://github.com/ScoopInstaller/Nirsoft",
      "description": "NirSoft tools"
    },
    "php": {
      "source": "https://github.com/ScoopInstaller/PHP",
      "description": "PHP related tools"
    },
    "nonportable": {
      "source": "https://github.com/ScoopInstaller/Nonportable",
      "description": "Non-portable applications"
    },
    "java": {
      "source": "https://github.com/ScoopInstaller/Java",
      "description": "Java applications"
    },
    "games": {
      "source": "https://github.com/Calinou/scoop-games",
      "description": "Games"
    },
    "nerd-fonts": {
      "source": "https://github.com/matthewjberger/scoop-nerd-fonts",
      "description": "Programming fonts"
    },
    "sysinternals": {
      "source": "https://github.com/niheaven/scoop-sysinternals",
      "description": "Windows Sysinternals tools"
    }
  },
  "sync": {
    "schedule": "0 0 * * *",
    "timezone": "Asia/Shanghai",
    "auto_update_readme": true,
    "generate_statistics": true
  }
}
